{
  "manifest_version": 2,
  "name": "Show Video Resolution",
  "version": "1.0",

  "description": "Shows the source video resolution of a <video> element.",

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["show-video-resolution.js"]
    }
  ],
  "background": {
    "scripts": ["background-script.js"],
    "type": "module"
  },
  "permissions": ["contextMenus", "menus"]
}
