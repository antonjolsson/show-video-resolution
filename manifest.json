{
  "manifest_version": 2,
  "name": "Video Streaming Statistics",
  "version": "1.0",

  "description": "Shows some basic statistics on the stream displayed in a <video> element.",

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["show-video-resolution.js"]
    }
  ],
  "background": {
    "scripts": ["background-script.js"],
    "type": "module"
  },
  "permissions": ["contextMenus", "menus"],
  "icons": {
    "48": "icon-48.png",
    "96": "icon-96.png"
  }
}
